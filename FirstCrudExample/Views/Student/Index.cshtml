@model IEnumerable<FirstCrudExample.Models.Student>

@{
    ViewData["Title"] = "Student List";
    int sn = 1;
}
<style>
    body {
        background: #FEEBF6;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Student List</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Create New
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>S.N.</th>
                <th>@Html.DisplayNameFor(model => model.First().StdName)</th>
                <th>@Html.DisplayNameFor(model => model.First().StdAddress)</th>
                <th>@Html.DisplayNameFor(model => model.First().JoinDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().Faculty.FacultyName)</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(sn++)</td>
                    <td>@Html.DisplayFor(modelItem => item.StdName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StdAddress)</td>
                    <td>@item.JoinDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.Faculty.FacultyName</td>
                    <td>
                        <a asp-action="Edit" asp-route-sid="@item.StdId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.StdId" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.StdId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
