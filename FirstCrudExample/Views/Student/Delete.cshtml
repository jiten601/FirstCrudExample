@model FirstCrudExample.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-semibold">Are you sure you want to delete this student?</p>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.StdName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.StdName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.StdAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.StdAddress)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.JoinDate)</dt>
                        <dd class="col-sm-8">@Model.JoinDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Faculty)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Faculty.FacultyName)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <input type="hidden" asp-for="StdId" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
