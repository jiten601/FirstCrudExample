@model FirstCrudExample.Models.StudentInsert

@{
    ViewData["Title"] = "Create Student";
    SelectList facList = (SelectList)ViewData["FacultyList"];
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> Add New Student
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="StdName" class="form-label"></label>
                            <input asp-for="StdName" class="form-control" />
                            <span asp-validation-for="StdName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StdAddress" class="form-label"></label>
                            <input asp-for="StdAddress" class="form-control" />
                            <span asp-validation-for="StdAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JoinDate" class="form-label"></label>
                            <input asp-for="JoinDate" type="date" class="form-control" />
                            <span asp-validation-for="JoinDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FacultyId" class="form-label">Faculty Name:</label>
                            <select asp-for="FacultyId" class="form-select" asp-items="facList"></select>
                            <span asp-validation-for="FacultyId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
